def torrehanoi(discos):
    if discos == 1:
        contador = 1
    else: 
        contador= (2* torrehanoi(discos - 1)+1)
    return contador
def movimientos():
    discos = int(input("Introduzca el n√∫mero total de discos de la Torre de Hanoi: "))
    print("{} los discos deben moverse: {} veces".format(discos, torrehanoi(discos)))

movimientos()

